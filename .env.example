# Queue Worker Configuration
QUEUE_STUCK_JOB_TIMEOUT_MINUTES=60        # Jobs stuck after this time
QUEUE_EXTRACTION_TIMEOUT_MINUTES=30       # Max time for extraction
QUEUE_REPROCESSING_TIMEOUT_MINUTES=45     # Max time for reprocessing  
QUEUE_POLL_INTERVAL_MS=5000              # Poll every 5 seconds
QUEUE_CHECK_STUCK_INTERVAL_MS=60000      # Check stuck jobs every minute

# Agent Development Logging Configuration
AGENT_LOGGING_ENABLED=true               # Enable/disable agent logging (default: true in development)
AGENT_LOG_LEVEL=debug                    # Logging level: verbose, debug, info (default: debug)
AGENT_LOG_DIR=./logs/development         # Directory for log files (default: ./logs/development)
AGENT_LOG_LLM_RESPONSES=true            # Include full LLM requests/responses (default: true)
